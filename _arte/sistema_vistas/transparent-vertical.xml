<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <formatVersion>7</formatVersion>
  <view name="system">
    <carousel name="systemcarousel">
      <type>vertical</type>
	  <logoSize>0.22 1</logoSize>
	  <maxLogoCount>5</maxLogoCount>
	  <logoScale>2.1</logoScale>
	  <color>FAFAFF00</color>
      <colorEnd>FAFAFF00</colorEnd>
      <systemInfoDelay>300</systemInfoDelay>
      <zIndex>20</zIndex>
      <pos>0.5 0</pos>
      <size>0.5 1</size>
      <origin>0 0</origin>
    </carousel>

    <text name="systemInfo">
      <pos>-0.285 0.715</pos>
      <size>1 0.25</size>
      <origin>0 0</origin>
	  <backgroundColor>0000FF00</backgroundColor>
      <color>${systemInfoColor}</color>
      <glowColor>${glowColor}</glowColor>
      <glowSize>1</glowSize>
      <fontSize>0.045</fontSize>
	  <fontPath>./_arte/knight-rider.TTF</fontPath>
	  <!-- <reflexion>0.17 0.0</reflexion> -->
	  <zIndex>155</zIndex>
    </text>

    <video name="staticBackgroundVideo">
      <path>./_arte/bgv-sistemas/NoCopyrightVideo.mp4</path>
    </video>

    <image name="Consolas" extra="true">
      <path>./../consoles/default.png</path>
      <path>./../consoles/${system.theme}.png</path>
      <linearSmooth>true</linearSmooth>
      <size>0.2 0</size>
	  <pos>0.045 0.217</pos>
	  <origin>0 0</origin>
      <color>FFFFFFF0</color>
      <zIndex>21</zIndex>
	  <storyboard>
        <animation property="y" from="0" to="0.5" duration="1350" mode="easeOut"/>
        <animation property="opacity" from="0.5" to="1" duration="1288" mode="easeIn" autoReverse="true" repeat="forever"/>
        <animation property="scale" from="0" to="2" duration="850" mode="easeOut"/>
		<animation property="y" from="0.5" to="0.32" duration="7750" mode="easeOut"/>
      </storyboard>
    </image>

  <helpsystem name="help">
	  <pos>2 2</pos>
  </helpsystem>

	
  </view>
</theme>
